<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card">
        <div class="card-body mt-4">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <br>
            <small>Data: {{data}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem!</h5> 
{{/each}}